<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/lightTheme"
    tools:context=".fragments.create_transaction">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/productMRP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/input_box"
                android:fontFamily="@font/baloo_bhai"
                android:hint="Purchased Price"
                android:inputType="number|numberDecimal"
                android:padding="20dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/product_qtty"
                app:layout_constraintTop_toBottomOf="@+id/name" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/app_background_light"
                android:fontFamily="@font/baloo_bhai"
                android:padding="5dp"
                android:text="Purchased"
                android:textAlignment="center"
                android:textColor="#A1887F"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/productMRP"
                app:layout_constraintHorizontal_bias="0.233"
                app:layout_constraintStart_toStartOf="@+id/productMRP"
                app:layout_constraintTop_toTopOf="@+id/textView15" />

            <EditText
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/input_box"
                android:fontFamily="@font/baloo_bhai"
                android:hint="product name"
                android:padding="20dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/product_qtty"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageView6"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />

            <EditText
                android:id="@+id/product_qtty"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:background="@drawable/input_box"
                android:fontFamily="@font/baloo_bhai"
                android:inputType="number|numberDecimal"
                android:padding="20dp"
                android:text="1"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/imageView6"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="22dp"
                android:background="@color/app_background_light"
                android:fontFamily="@font/baloo_bhai"
                android:padding="5dp"
                android:text="Qty"
                android:textAlignment="center"
                android:textColor="#A1887F"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/product_qtty"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="22dp"
                android:background="@color/app_background_light"
                android:fontFamily="@font/baloo_bhai"
                android:padding="5dp"
                android:text="Product"
                android:textAlignment="center"
                android:textColor="#A1887F"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/product_price"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="44dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_transactions" />

            <EditText
                android:id="@+id/product_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/input_box"
                android:fontFamily="@font/baloo_bhai"
                android:hint="Price"
                android:inputType="number|numberDecimal"
                android:padding="20dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/productMRP"
                app:layout_constraintStart_toStartOf="@+id/imageView6"
                app:layout_constraintTop_toBottomOf="@+id/name" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/app_background_light"
                android:fontFamily="@font/baloo_bhai"
                android:padding="5dp"
                android:text="Price"
                android:textAlignment="center"
                android:textColor="#A1887F"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/product_price"
                app:layout_constraintTop_toBottomOf="@+id/name" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_price">

                <Spinner
                    android:id="@+id/category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="44dp"
                    android:background="@drawable/habbits_card_bg"
                    android:hint="Category "
                    android:minHeight="48dp"
                    android:padding="12dp"
                    android:spinnerMode="dropdown"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/time_choosen4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/input_box"
                    android:fontFamily="@font/baloo_bhai"
                    android:hint="22 JAN 2022"
                    android:padding="20dp"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/add_category"
                    app:layout_constraintStart_toStartOf="@+id/category"
                    app:layout_constraintTop_toBottomOf="@+id/add_category" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="22dp"
                    android:background="@color/app_background_light"
                    android:fontFamily="@font/baloo_bhai"
                    android:padding="5dp"
                    android:text="date"
                    android:textAlignment="center"
                    android:textColor="#A1887F"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/time_choosen4"
                    app:layout_constraintTop_toBottomOf="@+id/add_category" />

                <ImageButton
                    android:id="@+id/choose_time2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_transactions"
                    app:layout_constraintBottom_toBottomOf="@+id/time_choosen4"
                    app:layout_constraintEnd_toEndOf="@+id/time_choosen4"
                    app:layout_constraintTop_toTopOf="@+id/time_choosen4" />

                <Button
                    android:id="@+id/add_task_to_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="add"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="@+id/time_choosen4"
                    app:layout_constraintTop_toBottomOf="@+id/time_choosen4" />

                <Button
                    android:id="@+id/add_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="add new category"
                    app:layout_constraintEnd_toEndOf="@+id/category"
                    app:layout_constraintTop_toBottomOf="@+id/category" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Spinner
                android:id="@+id/result_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/textView6"
                app:layout_constraintEnd_toEndOf="@+id/name"
                app:layout_constraintStart_toStartOf="@+id/name" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>
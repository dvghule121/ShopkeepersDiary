<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.create_transaction">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/productMRP"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/input_box"
            android:fontFamily="@font/baloo_bhai"
            android:padding="15dp"
            android:text="2980"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/product_qtty"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai"
            android:text="M.R.P"
            android:textAlignment="center"
            android:textColor="#A1887F"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/productMRP"
            app:layout_constraintHorizontal_bias="0.233"
            app:layout_constraintStart_toStartOf="@+id/productMRP"
            app:layout_constraintTop_toTopOf="@+id/textView15" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/baloo_bhai"
            android:text="Price"
            android:textAlignment="center"
            android:textColor="#A1887F"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/product_price"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <EditText
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/habbits_card_bg"
            android:fontFamily="@font/baloo_bhai"
            android:hint="product name"
            android:padding="15dp"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/textView8"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/baloo_bhai"
            android:text="Quantity"
            android:textAlignment="center"
            android:textColor="#A1887F"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <EditText
            android:id="@+id/product_qtty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/baloo_bhai"
            android:padding="15dp"
            android:text="1"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <EditText
            android:id="@+id/product_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/habbits_card_bg"
            android:fontFamily="@font/baloo_bhai"
            android:hint="2500"
            android:padding="15dp"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/productMRP"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/baloo_bhai"
            android:text="Product"
            android:textAlignment="center"
            android:textColor="#A1887F"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/product_price"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_transactions" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_price">

            <Spinner
                android:id="@+id/category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="44dp"
                android:background="@drawable/habbits_card_bg"
                android:entries="@array/categories"
                android:hint="Category "
                android:minHeight="48dp"
                android:padding="12dp"
                android:spinnerMode="dropdown"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/time_choosen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/habbits_card_bg"
                android:fontFamily="@font/baloo_bhai"
                android:hint="13 : 30  "
                android:padding="15dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/category"
                app:layout_constraintStart_toEndOf="@+id/time_choosen4"
                app:layout_constraintTop_toBottomOf="@+id/category" />

            <TextView
                android:id="@+id/time_choosen4"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/habbits_card_bg"
                android:fontFamily="@font/baloo_bhai"
                android:hint="22 JAN 2022"
                android:padding="15dp"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/category"
                app:layout_constraintTop_toBottomOf="@+id/category" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/baloo_bhai"
                android:text="time"
                android:textAlignment="center"
                android:textColor="#A1887F"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/time_choosen"
                app:layout_constraintHorizontal_bias="0.135"
                app:layout_constraintStart_toStartOf="@+id/time_choosen"
                app:layout_constraintTop_toBottomOf="@+id/category" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/baloo_bhai"
                android:text="date"
                android:textAlignment="center"
                android:textColor="#A1887F"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/time_choosen"
                app:layout_constraintHorizontal_bias="0.051"
                app:layout_constraintStart_toStartOf="@+id/time_choosen4"
                app:layout_constraintTop_toBottomOf="@+id/category" />

            <ImageButton
                android:id="@+id/choose_time"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@android:drawable/ic_lock_idle_alarm"
                app:layout_constraintBottom_toBottomOf="@+id/time_choosen"
                app:layout_constraintEnd_toEndOf="@+id/time_choosen"
                app:layout_constraintTop_toTopOf="@+id/time_choosen"
                app:layout_constraintVertical_bias="0.461" />

            <ImageButton
                android:id="@+id/choose_time2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_transactions"
                app:layout_constraintBottom_toBottomOf="@+id/time_choosen4"
                app:layout_constraintEnd_toEndOf="@+id/time_choosen4"
                app:layout_constraintTop_toTopOf="@+id/time_choosen4" />

            <Button
                android:id="@+id/add_task_to_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/baloo_bhai"
                android:text="add"
                app:cornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="@+id/time_choosen"
                app:layout_constraintTop_toBottomOf="@+id/time_choosen" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SB_stores" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Define your text styles -->
    <style name="Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="lightTheme">
        <item name="android:background">@color/colorBackground</item>
        <item name="textColor">@color/colorText</item>
        <item name="cardBackgroundColor">@color/white</item>


    </style>


    <style name="CustomRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@drawable/custom_radio_button</item>
        <!-- Add other custom attributes if needed -->
    </style>


</resources>